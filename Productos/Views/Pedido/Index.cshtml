@model IEnumerable<Productos.Data.Pedido>

@{
    ViewData["Title"] = "Pedidos";
}

<h2>Pedidos</h2>

<div class="card" style="width:100%;">
    <div class="card-body">
        <h5 class="card-title">Lista de pedidos</h5>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.PedidoID)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.ClienteID)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.FechaPedido)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Monto)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Estado)</th>
                    <th scope="col">Acciones</th> <!-- Columna para los botones -->
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.PedidoID)</td>
                        <td>@Html.DisplayFor(modelItem => item.ClienteID)</td>
                        <td>@item.FechaPedido.ToString("dd/MM/yyyy")</td>
                        <td>@item.Monto.ToString("C")</td>
                        <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                        <td>
                            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.PedidoID">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.PedidoID">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <p class="text-center">
            <a class="btn btn-info" asp-action="Create">
                <i class="bi bi-cart-plus"></i> Crear Pedido
            </a>
        </p>
    </div>
</div>
