@model Productos.Data.Pedido

@{
    ViewData["Title"] = "Editar Pedido";
}

<h1>Editar Pedido</h1>

<div class="container">
    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken() <!-- Protección CSRF -->
        <!-- Campo oculto para el ID del pedido -->
        <input type="hidden" asp-for="PedidoID" />

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ClienteID"></label>
                    <input asp-for="ClienteID" class="form-control" placeholder="Cliente ID" required>
                    <span asp-validation-for="ClienteID" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Monto"></label>
                    <input asp-for="Monto" class="form-control" placeholder="Monto" required type="number" step="0.01">
                    <span asp-validation-for="Monto" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="FechaPedido"></label>
                    <input asp-for="FechaPedido" type="date" class="form-control" required>
                    <span asp-validation-for="FechaPedido" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Estado"></label>
                    <select asp-for="Estado" class="form-control" required>
                        <option value="Pendiente">Pendiente</option>
                        <option value="En Proceso">En Proceso</option>
                        <option value="Completado">Completado</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary mt-3" id="btnEditar">
            <i class="bi bi-pencil-square"></i> Guardar Cambios
        </button>

        <a asp-action="Index" class="btn btn-secondary mt-3">
            <i class="bi bi-arrow-left"></i> Cancelar
        </a>
    </form>
</div>
