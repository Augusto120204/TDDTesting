@model Productos.Data.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<h1>Eliminar Cliente</h1>

<div class="container">
    <h3>¿Estás seguro de que deseas eliminar este cliente?</h3>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">Código</dt>
        <dd class="col-sm-9">@Model.Codigo</dd>

        <dt class="col-sm-3">Nombres</dt>
        <dd class="col-sm-9">@Model.Nombres</dd>

        <dt class="col-sm-3">Apellidos</dt>
        <dd class="col-sm-9">@Model.Apellidos</dd>

        <dt class="col-sm-3">Cédula</dt>
        <dd class="col-sm-9">@Model.Cedula</dd>

        <dt class="col-sm-3">Dirección</dt>
        <dd class="col-sm-9">@Model.Direccion</dd>

        <dt class="col-sm-3">Teléfono</dt>
        <dd class="col-sm-9">@Model.Telefono</dd>

        <dt class="col-sm-3">Correo Electrónico</dt>
        <dd class="col-sm-9">@Model.Mail</dd>

        <dt class="col-sm-3">Fecha de Nacimiento</dt>
        <dd class="col-sm-9">@Model.FechaNacimiento.ToShortDateString()</dd>

        <dt class="col-sm-3">Estado</dt>
        <dd class="col-sm-9">@(Model.Estado ? "Activo" : "Inactivo")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()

        <!-- Campo oculto para enviar el ID del cliente -->
        <input type="hidden" asp-for="Codigo" />

        <button type="submit" class="btn btn-danger" id="btnEliminar">
            <i class="bi bi-trash"></i> Eliminar
        </button>

        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Cancelar
        </a>
    </form>
</div>
